


<div class="container">
<img src ="cheese-burger-ingredients-falling-down-floating-white-background-vector-illustration-cheese-burger-ingredients-falling-down-173466261.jpg">

</div>


<h1 class="text-center padding">Eat-Da-Burgers!</h1>

<div class="row">
  <div class="col-6">

    <h2 class="text-center">Burgers to be eaten</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>

  </div>


  <div class="col-6">
    <h2 class="text-center">Burgers to Devour</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>



<div class="row">
  <div class="col-4"></div>
  <div class="col-4 shadow">
    <h2 class = "text-center">Add a Burger</h2>
    <form class="create-form">

      <div class="form-group text-center">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group text-center">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
      </div>

      <div class = "text-center">

          <button type="submit">Add Burger</button>


      </div>
    </form>
  </div>
  <div class="col-4"></div>

</div>

<div class = "row">
  <div class = "col-12">   
  </div>
</div>